#downloadPage {
$buttonHighlightColor = $panelTextColor;
$borderDefaultColor = darken($panelTextColor, 40);
$borderFocusColor = darken($panelTextColor, 20);
$backgroundSelectedColor = #1a1400;

.video-options {
  display: flex;
  justify-content: center;

  > button.option {
    max-width: 230px;
    width: 100%;
    margin: 0;
    padding: 16px;
    border-width: 4px !important;
    border-radius: 18px !important;
    border-color: $borderDefaultColor !important;
    box-shadow: none !important;
    position relative;


    @media mobile {
      max-width: unset;
    }

    &:focus {
      border-color: $borderFocusColor !important;
    }

    &:hover {
      background-color: $backgroundSelectedColor !important;
    }

    &:not(:last-child) {
      margin-right: 14px;
    }

    &.-selected {
      border-color: $buttonHighlightColor !important;
      background-color: $backgroundSelectedColor !important;
    }
  }

  > button.option  > .title {
    font-weight: bold;
    display: block;
    margin-bottom: 10px;
  }

  > button.option  > .description {
    display: block;
    margin-bottom: 4px;
  }

  > button.option  > .deathstar-icon {
    max-width: 80px;
    margin: 0 auto 10px;
    display: block;

    @media mobile {
      padding-right: 5px;
    }
  }
}

.help-button {
  position: absolute;
  right: 16px;

  > .icon {
    border: 3px solid currentcolor;
    border-radius: 100%;
    display: block;
    font-weight: bold;
    font-size: 20px;
    width: 20px;
    height: 20px;
    padding: 2px;
    cursor: pointer;

    @media mobile {
      font-size: 1.3em;
      border-width: 6px;
      padding: 4px;
      width: 40px;
      height: 40px;
    }
  }

  > .popover {
    opacity: 0;
    visibility: hidden;
    position: absolute;
    left: -111px;
    transform: translate(0, -90%);
    border: 4px solid currentcolor;
    background-color: $panelBackgroundColor;
    border-radius: 18px;
    padding: 16px;
    width: 222px;

    @media mobile {
      width: 350px;
      left: -300px;
    }
  }

  &:hover {
    > .popover {
      z-index: 10;
      opacity: 1;
      visibility: visible;
      transform: translate(0, -110%);
      transition: all 0.5s cubic-bezier(0.75, -0.02, 0.2, 0.97);
    }
  }
}

}