.swal2-popup.starwars-sweetalert {
  border: 2px solid $panelTextColor;
  background-color: $formBackgroundColor;

  @media mobile {
    font-size: 2em;
  }

  .swal2-title {
    starWarsFontStyle();
    margin-bottom: 1em;
  }

  .swal2-content{
    margin-bottom: 1em;
    color: $panelTextColor;
    font-family: $defaultFontFamily;
  }

  .swal2-actions:not(.swal2-loading) {
    button {
      buttonStyle();

      @media mobile {
        font-size: inherit;
      }
    }
  }

  .swal2-loading {
    button {
      border-right-color: $panelTextColor !important;
      border-left-color: $panelTextColor !important;
    }
  }

  .swal2-icon {
    &.swal2-error {
      border-color: $errorRed;
      .swal2-x-mark {
        span {
          background-color: $errorRed;
        }
      }
    }

    &.swal2-warning {
      border-color: $warningYellow;
      .swal2-icon-text{
        color: $warningYellow;
      }
    }
  }

  .swal2-close {
    color: $panelTextColor;

    &:hover {
      color: lighten($panelTextColor, 50%);
    }
  }
}