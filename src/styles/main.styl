@import './fonts/NewsCycleFont.css';

@font-face {
  font-family: StarWars;
  src: url('./fonts/Starjedi.ttf');
}

@font-face {
  font-family: StarWarsTitle;
  src: url('./fonts/SWCrawlTitle2.ttf');
}

html,
button,
input,
textarea {
  line-height: 1.25em;
}

starWarsFontStyle() {
  color: $titlesColor;
  letter-spacing: 3px;
  font-family: StarWars;
  line-height: 1.1em;
}

$defaultFontFamily = Helvetica, Arial, sans-serif;

// media queries
$HD = '(max-height: 720px)';

// variables
$timeFactor = 10.0;
$extraTime = (0 * $timeFactor);
$introColor = #4bd5ee;
$titlesColor = #ffd54e;

$formBackgroundColor = lighten(black, 3%);
$panelBackgroundColor = lighten(black, 5%);

$buttonHoverColor = lighten($formBackgroundColor, 20%);
$buttonFocusColor = lighten($formBackgroundColor, 40%);

$errorRed = #ab0000;
$panelTextColor = #d0ad3e;
$warningYellow = $panelTextColor;

mobile = 'only screen and (max-device-width : 500px)';

html,
body {
    display: initial;
    margin: 0;
    width: 100%;
    height: 100%;
    background: url('../assets/bg-stars.png') repeat;
    background-color: black;
    color: $titlesColor;
}

h1 {
  font-size: 40px;

  @media mobile {
    font-size: 60px;
  }
}

h2 {
  font-size: 2em;

  @media mobile {
    font-size: 4em;
  }
}

iframe{
    border: none;
}

.verticalWrapper{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;

  @media mobile {
    width: 105%;
    height: 105%;
  }
}

@keyframes fadeinAnimation {
    from {
      visibility: hidden;
      opacity: 0;
    }

    to   {
      visibility: visible;
      opacity: 1;
    }
}

@keyframes fadeoutAnimation {
    from {
      visibility: visible;
      opacity: 1;
    }

    to   {
      visibility: hidden;
      opacity: 0;
    }
}

fadeIn($delay = 0s, $fadeDuration = 500ms) {
  animation: fadeinAnimation $fadeDuration linear $delay forwards;
}

fadeOut($delay = 0s, $fadeDuration = 500ms) {
  animation: fadeoutAnimation $fadeDuration linear $delay forwards;
}

buttonStyle() {
  margin: 0 .3125em;
  padding: .625em 2em;
  border: 2px solid $panelTextColor !important;
  border-radius: 3px !important;
  background-color: $formBackgroundColor !important;
  color: $panelTextColor !important;
  text-align: center;
  font-weight: 500;
  font-size: 1.0625em;
  font-family: $defaultFontFamily;
  cursor: pointer;

  &:hover, &:active {
    background-color: $buttonHoverColor !important;
  }

  &:focus {
    box-shadow: 0 0 0 2px $buttonFocusColor !important;
  }

  @media mobile {
    margin-top: 20px;
    width: 100%;
    border: 4px solid $panelTextColor !important;
    border-radius: 6px !important;
    font-size: 2em;

    &:focus {
      box-shadow: 0 0 0 4px $buttonFocusColor !important;
    }
  }
}

