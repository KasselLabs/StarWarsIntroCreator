.loader__container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60px;
}

.loader,
.loader:after {
  width: 10em;
  height: 10em;
  border-radius: 50%;
}

.loader {
  position: relative;
  border-top: 1em solid $inputBorderColorHover;
  border-right: 1em solid $inputBorderColorHover;
  border-bottom: 1em solid $inputBorderColorHover;
  border-left: 1em solid var(--titles-color);
  -webkit-transform: translateZ(0);
  -ms-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-animation: load8 1.1s infinite linear;
  animation: load8 1.1s infinite linear;
}
@-webkit-keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
