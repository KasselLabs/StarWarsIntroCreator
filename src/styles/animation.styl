.starwarsAnimation {
  display: none;
  letter-spacing: .15em;
  font-weight: 700;
  font-size: 1em;
  font-family: 'News Cycle', sans-serif;
  line-height: normal;
  font-variant-ligatures: none;

  // intro text
  .introBackground {
      position: absolute;
      top: 0;
      left: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100vw;
      height: 100vh;
      background-color: black;
      opacity: 0;
      animation: introBackgroundAnimation var(--intro-background-duration);

      .intro {
        padding-right: 5%;
        padding-left: 5%;
        color: $introColor;
        font-weight: 400;
        font-size: 4.5vw;
        opacity: 0;
        transform: scaleX(1.1);
        animation: introTextAnimation var(--intro-text-duration) ease-out var(--intro-text-delay);
      }
  }

  #logo {
    position: static;
    text-align: center;
    font-family: StarWars;

    margin: 0 auto;
    opacity: 0;
    animation: logoAnimation var(--intro-logo-duration) cubic-bezier(.11, .6, .48, .88) var(--intro-logo-delay);

    &.-firefox-desktop {
      transform: scale(2.2);
    }

    .logoSub {
      width: 100vw;
    }

    .logoText {
      display: flex;
      flex-direction: column;
      align-items: center;
      color: black;
      text-shadow: stroke(5, $titlesColor);
      letter-spacing: .18em;
      font-size: 200px;
      line-height: 1em;

      div {
        white-space: nowrap;
      }
    }
  }

  // titles animation
  #titles {
    $titles-width = 14.65em;

    position: absolute;
    top: auto;
    bottom: 0;
    left: 50%;
    overflow: hidden;
    margin: 0 0 0 (- $titles-width / 2);
    width: $titles-width;
    height: 50em;
    text-align: justify;
    word-wrap: break-word;
    font-size: 350%;
    transform-origin: 50% 100%;
    transform: perspective(300px) rotateX(25deg);

    @media mobile {
      bottom: 33%;
      left: 52.5%;
    }

    @media screen and (min-width: 1920px) and (max-width: 1920px) {
        zoom: 1.9;
        transform: perspective(266px) rotateX(29deg) scaleX(1.2);
        -moz-transform: perspective(300px) rotateX(19deg) scale(2.3);
    }

    @media screen and (min-width: 1366px) and (max-width: 1366px) {
        zoom: 1.6;
        transform: perspective(216px) rotateX(26deg);
        -moz-transform: perspective(300px) rotateX(26deg) scale(1.6);
    }

    @media screen and (min-width: 1280px) and (max-width: 1280px) {
        zoom: 1.5;
        transform: perspective(216px) rotateX(26deg);
        -moz-transform: perspective(300px) rotateX(26deg) scale(1.5);
    }

    > div {
        position: absolute;
        top: 100%;
        width: 100%;
        animation: titlesAnimation var(--intro-crawl-duration) linear var(--intro-crawl-delay) forwards;

      > p {
        margin: 1.35em 0 1.85em 0;
        line-height: 1.35em;

        backface-visibility: hidden;
      }

      .tcenter {
        margin: 1.35em 0 -1em 0;
        text-align: center;
      }
    }

    #title {
      transform: scaleY(2);
      margin-top: 3.5em;
      margin-bottom: 1.6em;
      text-transform: uppercase;

      &.SWFont {
        margin-top: 1.35em;
        margin-bottom: -.1em;
        transform: scaleY(1);
        font-weight: normal;
        font-size: 210%;
        font-family: StarWarsTitle;
        text-transform: lowercase;
      }
    }

    #episode {
      margin-bottom: -2em;
    }

    #text {
      // line-height: 1.5em; // old version
      line-height: 1.4em;

      p {
        margin: 1em 0;
      }
    }
  }

  // end animation to deathstar
  #backgroundSpace {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4100px;
    background: url('../assets/bg-stars.png') repeat;

    #deathstar {
      position: absolute;
      right: 100px;
      bottom: 1150px;
      width: 655px;

      &.centerCustom { // not used, but can be for customizations
        right: 0;
        left: 0;
        margin: auto;
      }
    }
  }

  .playing-buttons {
    position: fixed;
    bottom: 0;
    background-color: $panelBackgroundColor;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    transition: opacity 0.5s ease;

    @media mobile {
      padding: 20px;
      flex-direction: column;
    }

    > .playing-button {
      @extend $actionButtonStyle;
      font-size: 30px;
      border-width: 2px;

      &:not(:last-child) {
        margin-right: 10px;

        @media mobile {
          margin-right: 0;
          margin-bottom: 20px;
        }
      }

      &:focus, &:hover {
        box-shadow: -1px 1px 4px $greenShadow, 1px -1px 4px $greenShadow, inset -3px -2px 4px $greenShadow, inset 2px 3px 4px $greenShadow;
        text-shadow: -1px 1px 4px $greenShadow, 1px -1px 4px $greenShadow;
      }

      @media mobile {
        padding: 12px 30px 30px;
        border-width: 8px;
        border-radius: 30px;
        font-size: 100px;
      }
    }
  }
}


 // background scroll at the end
body.runningVideo {
  overflow: hidden;

  .starwarsAnimation {
    display: initial;
  }

  #backgroundSpace {
    animation: scrolldown var(--intro-ending-duration) var(--intro-ending-delay) forwards;
  }
}

@keyframes introTextAnimation {
  0% {
    opacity: 0;
  }
    20% {
    opacity: 1;
  }
    90% {
    opacity: 1;
  }
    100% {
    opacity: 0;
  }
}

@keyframes introBackgroundAnimation {
    0% {
    opacity: 1;
  }
  100% {
      opacity: 1;
    }
}

@keyframes logoAnimation {
    0% {
    transform: scale(2.2);
    opacity: 1;
  }
    95% {
    opacity: 1;
  }
    100% {
    transform: scale(.01);
    opacity: 0;
  }
}

@keyframes titlesAnimation {
  0% {
    top: 100%;
    opacity: 1;
  }
  95% {
    opacity: 1;
  }
  100% {
    top: 20%;
    opacity: 0;
  }
}

@keyframes scrolldown {
  0% {
      transform: translateY(0);
  }
  100% {
      transform: translateY(-2200px);
  }
}
